    private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String retorno;
        retorno = this.pantalla.getText();

        if (retorno.length() > 0) {
            retorno = retorno.substring(0, retorno.length() - 1);
            this.pantalla.setText(retorno);
        }

    }                                         

