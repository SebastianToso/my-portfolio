    private static final Logger LOG = Logger.getLogger(LaCalculadora.class.getName());

    public String sincero(float resultado) {
        String retorno = "";
        retorno = Float.toString(resultado);

        if (resultado % 1 == 0) {
            retorno = retorno.substring(0, retorno.length() - 2);

        }

        return retorno;

    }

